<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fcfcfc"
    android:orientation="vertical" >
        
        <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_vertical"  >  
  			
            
      		<TextView
      		    android:id="@+id/current_xiaoqu_name"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="微信"
        		android:layout_alignParentLeft="true" 
        		android:textSize="20sp"	
        		android:src="@drawable/title_btn_function"
				android:background="@drawable/title_btn_right"	
				android:textColor="#ffffff" />      		
        		<!-- android:layout_centerInParent="true" -->
      		
			<ImageButton
      		    android:id="@+id/personal_settings"
			    android:layout_width="90dp" 
        		android:layout_height="wrap_content"
        		android:layout_alignParentRight="true" 
        		android:layout_centerVertical="true"
        		android:layout_marginRight="5dp"
        		android:src="@drawable/mm_title_btn_contact_normal"
				android:background="@drawable/title_btn_right"
				android:onClick="personalsettings" />      
		</RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_bar_bg" >

            <TextView
		        android:id="@+id/myxiaoqu_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textColor="#000"
				android:text="@string/myxiaoqu_label" />
            
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"            
       		android:gravity="center_horizontal|clip_vertical"
       		android:paddingTop="15dp"  
            android:background="@drawable/mm_listitem">
            
            <ImageView
                android:id="@+id/wuyenotifier"
                android:layout_width="85dp"
		        android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:onClick="wuyenotifieronclick"
                android:src="@drawable/green_test_icon" />
            
            <ImageView
                android:id="@+id/phonenumbers"
                android:layout_width="85dp"
		        android:layout_height="65dp"
		        android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wuyenotifier"
                android:onClick="wuyenotifieronclick"
                android:paddingLeft="5dp"
                android:src="@drawable/red_test_icon" />
            
            <ImageView
                android:id="@+id/bbs"
                android:layout_width="85dp"
		        android:layout_height="65dp"
		        android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/phonenumbers"
                android:onClick="wuyenotifieronclick"
                android:paddingLeft="5dp"
                android:src="@drawable/blue_test_icon" />

            <TextView
                android:id="@+id/wuyenotifier_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wuyenotifier"
                android:text="@string/wuyenotifier_label"
                android:gravity="center"
                android:textColor="#000" />
            
            <TextView
                android:id="@+id/phonenumbers_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/phonenumbers"
                android:layout_toRightOf="@+id/wuyenotifier_label"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/phonenumbers_label"
                android:textColor="#000" />
             
            <TextView
                android:id="@+id/bbs_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/bbs"
                android:layout_toRightOf="@+id/phonenumbers_label"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/bbs_label"
                android:textColor="#000" />

            
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_bar_bg" >

            <TextView
		        android:id="@+id/xiaoquaround_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textColor="#000"
				android:text="@string/xiaoquaround_label" />
            
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
       		android:gravity="center_horizontal|clip_vertical"
       		android:paddingTop="15dp"  
            android:background="@drawable/mm_listitem">
            
            <ImageView
                android:id="@+id/shoppings"
                android:layout_width="85dp"
		        android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:onClick="wuyenotifieronclick"
                android:src="@drawable/green_test_icon" />
            
            <ImageView
                android:id="@+id/waimai"
                android:layout_width="85dp"
		        android:layout_height="65dp"
		        android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shoppings"
                android:onClick="wuyenotifieronclick"
                android:paddingLeft="5dp"
                android:src="@drawable/red_test_icon" />
            
            <ImageView
                android:id="@+id/pingche"
                android:layout_width="85dp"
		        android:layout_height="65dp"
		        android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/waimai"
                android:onClick="wuyenotifieronclick"
                android:paddingLeft="5dp"
                android:src="@drawable/blue_test_icon" />

            <TextView
                android:id="@+id/shoppings_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoppings"
                android:text="@string/shoppings_label"
                android:gravity="center"
                android:textColor="#000" />
            
            <TextView
                android:id="@+id/waimai_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/waimai"
                android:layout_toRightOf="@+id/shoppings_label"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/waimai_label"
                android:textColor="#000" />
             
            <TextView
                android:id="@+id/pingche_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/pingche"
                android:layout_toRightOf="@+id/waimai_label"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/pingche_label"
                android:textColor="#000" />

            
            
        </RelativeLayout>

 </LinearLayout>
